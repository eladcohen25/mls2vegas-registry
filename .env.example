# Public Supabase (safe for browser)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key

# Server-only Supabase (NEVER expose to client)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Admin
ADMIN_PASSWORD=placeholderpasswordhere

# Registration counter offsets (numbers; default to 0 if missing)
SUPPORTERS_OFFSET=252
YOUTH_PARENTS_OFFSET=115
BUSINESSES_OFFSET=115

# Google Sheets Integration (Optional)
GOOGLE_SHEETS_WEBHOOK_URL=your_google_apps_script_webhook_url

# Email Configuration (Optional - Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ADMIN_EMAIL=admin@mlstovegas.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=5

# Site URL (for share links / metadata base)
NEXT_PUBLIC_SITE_URL=https://mlstovegas.com

